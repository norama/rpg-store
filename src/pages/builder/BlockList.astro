---
import Row from 'styles/components/custom/row.astro'
import CardLink from '@widgets/CardLink'
import BlockDisplay from '@components/BlockDisplay'

const blocks = [
  { url: '/builder/blocks/races', header: 'Rasa', action: 'Vybrat rasu', type: 'races' },
  {
    url: '/builder/blocks/equipments',
    header: 'Equipments',
    action: 'Set equipments',
    type: 'equipments',
  },
  {
    url: '/builder/blocks/advantages',
    header: 'Výhody - nevýhody',
    action: 'Nastavit',
    type: 'advantages',
  },
  {
    url: '/builder/blocks/advantagesTransfer',
    header: 'Výhody - nevýhody: transfer',
    action: 'Nastavit',
    type: 'advantages',
  },
]
---

<Row marginTop={4}>
  {
    blocks.map((block) => (
      <CardLink
        href={block.url}
        header={block.header}
        action={block.action}
        customStyle={{ minWidth: '300px', color: 'background' }}
        client:only="solid-js"
      >
        <Row marginTop={3}>
          <BlockDisplay type={block.type} client:only="solid-js" />
        </Row>
      </CardLink>
    ))
  }
</Row>
