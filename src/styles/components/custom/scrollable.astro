---
import Box from './box.astro'

const { padding = '3rem', height = '60rem' } = Astro.props

const outerPadding = `${padding} 0`
const innerPadding = `0 ${padding}`
---

<Box padding={outerPadding} height={height} boxSizing="border-box">
  <Box padding={innerPadding} height="100%" overflowY="auto">
    <slot />
  </Box>
</Box>
