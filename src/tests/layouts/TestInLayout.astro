---
import 'styles/global.css'
import TestLayout from 'tests/layouts/TestLayout.astro'
import TestAction from 'tests/components/TestAction'
import TestResult from 'tests/components/TestResult'

type Props = {
  label: string
  name: string
  description: string
}
const { label, name, description }: Props = Astro.props
---

<TestLayout label={label} name={name} description={description}>
  {' '}
  <div slot="action">
    <TestAction name={name} client:only="solid-js" />
  </div>
  <div slot="result">
    <TestResult name={name} client:only="solid-js" />
  </div>
</TestLayout>
